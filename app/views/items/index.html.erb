<h1>Listing items</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Type</th>
    <th>Status</th>
    <th>Checkout date</th>
    <th>Due date</th>
    <th>User</th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%=h item.title %></td>
    <td><%=h item.type %></td>
    <td><%=h item.status %></td>
    <td><%=h item.checkout_date %></td>
    <td><%=h item.due_date %></td>
    <td><%=h item.user_id %></td>
    <td><%= link_to 'Show', item %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= link_to 'Destroy', item, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New item', new_item_path %>